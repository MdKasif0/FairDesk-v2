rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to get the user's document
    function getUserDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    // Helper function to check if a user is a member of a specific group
    function isMemberOfGroup(groupId) {
      return isSignedIn() && getUserDoc().data.groupId == groupId;
    }

    // Rule for the 'users' collection
    match /users/{userId} {
      // Users can read and update their own document.
      allow read, update: if isSignedIn() && request.auth.uid == userId;
      // Any signed-in user can create their own user document (on signup).
      allow create: if isSignedIn();
      // Allow users to list all members of their own group.
      allow list: if isSignedIn() && isMemberOfGroup(request.query.filters[0].value);
    }
    
    // Rule for the 'groups' collection
    match /groups/{groupId} {
      // A user can create a group if they are the creator listed in the new document.
      allow create: if isSignedIn() && request.resource.data.creatorId == request.auth.uid;
      // Any member of a group can read or update it.
      allow read, update: if isMemberOfGroup(groupId);
    }

    // Rules for group-specific sub-collections
    // This single rule covers seats, assignments, and changeRequests.
    match /{collection}/{docId} {
        // A user can list documents in these collections if they are querying by their own groupId.
        allow list: if isSignedIn() && (
          collection == 'seats' || 
          collection == 'assignments' || 
          collection == 'changeRequests'
        ) && isMemberOfGroup(request.query.filters[0].value);
        
        // A user can get, create, update, or delete a document if it belongs to their group.
        allow read, write: if isSignedIn() && (
          collection == 'seats' || 
          collection == 'assignments' || 
          collection == 'changeRequests'
        ) && isMemberOfGroup(request.resource.data.groupId);
    }
  }
}
